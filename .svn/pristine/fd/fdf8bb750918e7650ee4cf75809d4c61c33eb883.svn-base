
@{
    ViewData["Title"] = "Family";
    Layout = "~/Views/Shared/LayoutUser.cshtml";
}
<div class="pcoded-content">
    <div class="pcoded-inner-content">

        <!-- Main-body start -->
        <div class="main-body">
            <div class="page-wrapper">
                <!-- Page body start -->
                <div class="page-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <!-- Basic Form Inputs card start -->
                            <div class="card">
                                <div class="card-header">
                                    <h1>Quan hệ gia đình</h1>
                                    <form class="needs-validation" novalidate>
                                        <div class="form-group row">
                                            <label class="col-sm-2 col-form-label">Họ tên</label>
                                            <div class="col-sm-3">
                                                <input type="text" class="form-control" required>
                                            </div>
                                            <label class="col-sm-2 col-form-label">
                                                Quan hệ
                                            </label>
                                            <div class="col-sm-2">
                                                <select name="select" class="form-control">
                                                    <option value="0">Cha đẻ</option>
                                                    <option value="1">Mẹ đẻ</option>
                                                    <option value="2">Anh trai</option>
                                                    <option value="3">Em trai</option>
                                                    <option value="4">Chị gái</option>
                                                    <option value="5">Em gái</option>
                                                    <option value="6">Vợ</option>
                                                    <option value="7">Chồng</option>
                                                    <option value="8">Con</option>
                                                </select>
                                            </div>

                                        </div>
                                        <div class="form-group row">
                                            <label class="col-sm-2 col-form-label">
                                                Nghề
                                                nghiệp
                                            </label>
                                            <div class="col-sm-3">
                                                <input type="text" class="form-control" required>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-sm-2 col-form-label">
                                                Lý lịch chính
                                                trị
                                            </label>
                                            <div class="col-sm-9">
                                                <textarea type="text" row="5"
                                                          class="form-control"></textarea>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-sm-2 col-form-label">Đính kèm</label>
                                            <div class="custom-file col-sm-6">
                                                <input type="file" id="customFile">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <button class="col-sm-2 col-form-label btn btn-primary">
                                                Lưu
                                            </button>
                                        </div>

                                    </form>
                                    <!-- Basic Form Inputs card end -->
                                    <!-- Input Grid card start -->
                                    <!-- Page body end -->
                                </div>
                            </div>
                            <!-- Main-body end -->
                            <div id="styleSelector">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
                </div>

